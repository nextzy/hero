<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_menu_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="@color/ais_green"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleDimension="@dimen/default_ripple_size"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!--<include-->
            <!--layout="@layout/aisapp_view_menu_divider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/default_margin_padding_small">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="@dimen/menu_icon_width"
                android:layout_height="@dimen/menu_icon_height"
                android:layout_marginEnd="@dimen/default_margin_padding_small"
                android:layout_marginRight="@dimen/default_margin_padding_small"
                android:padding="@dimen/default_margin_padding_small"
                android:scaleType="fitCenter"
                android:src="@mipmap/aisapp_ic_launcher" />

            <com.nextzy.lib.allforone.widget.AISTextView
                android:id="@+id/menu_text"
                style="@style/AISTextView.Brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0dp"
                android:text="@string/sample" />
        </LinearLayout>

        <include
            layout="@layout/aisapp_view_menu_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>