<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="@color/ais_green"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/default_margin_padding_small">

        <FrameLayout
            android:layout_width="@dimen/menu_icon_width"
            android:layout_height="@dimen/menu_icon_height"
            android:layout_marginRight="@dimen/default_margin_padding_small"
            android:layout_marginEnd="@dimen/default_margin_padding_small"
            android:padding="@dimen/default_margin_padding_small" />

        <com.nextzy.lib.allforone.widget.AISTextView
            android:id="@+id/menu_text"
            style="@style/AISTextView.Brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/sample" />

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>